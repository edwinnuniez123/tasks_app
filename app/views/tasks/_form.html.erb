<h1>Tasks#_form</h1>
<%= formato @task %>
   <% if @task.errors.any? %>
       <h2> There were errors! </h2>
       <ul>
           <% @task.errors.full_messages.each do|msg| %>
              <li> <%= msg%> </li>
           <% end %>
       </ul>
    <% end %>
 <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :priority %>
    <%= f.number_field :priority %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <p>
     <%= f.label :user %>
     <%= f.collection_select :user_id, User.all, :id, :username %>
  </p>
<% end %>

